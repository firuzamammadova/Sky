<UserControl x:Class="TravelApp.Views.GoodJobView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TravelApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Label VerticalAlignment ="Center" HorizontalContentAlignment="Center" Width="700" Height="90" FontSize="25" Foreground="Black" FontFamily="Segoe UI" VerticalContentAlignment="Center">Good job, you got your ticket , now let`s look for hotels</Label>
        <Button Background="#052c6b" Foreground="White" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="70" Width="120" Height="50" Command="{Binding ConCommand}">Continue</Button>
    </Grid>
</UserControl>
