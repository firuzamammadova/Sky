<UserControl x:Class="TravelApp.Views.ConcertView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelApp.Views"
        mc:Ignorable="d"
       >
    <Grid>

        <ListView Margin="8" Height="400" Width="650" 
    ItemsSource="{Binding Path=stuff}">
            <ListView.View>
                <GridView>
                  
                    <GridViewColumn DisplayMemberBinding="{Binding name}" 
                  Header="Name" Width="100"/>
                    <GridViewColumn DisplayMemberBinding="{Binding place}" 
                  Header="Price" Width="100"/>
                   
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</UserControl>
